<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color3"
    android:layout_margin="5dp">




    <android.support.v7.widget.CardView
        android:id="@+id/Press_on_CardViewss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:padding="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleimageee"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical|end"
                android:layout_margin="15dp"
                android:background="@drawable/ic_student_1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txNameStudentt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo"
                    android:gravity="right"
                    android:padding="1dp"
                    android:text="علاء محمود حسين"
                    android:textColor="@color/color2"
                    android:textSize="25sp"
                    android:textStyle="bold" />




                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/con"
                    android:textSize="25sp"
                    android:fontFamily="@font/cairo"
                    android:text="يريد إعادة الإختبار."
                    />

                <Button
                    android:id="@+id/agreeing"
                    android:layout_below="@+id/linearLayout"
                    android:background="@drawable/button_background"
                    android:layout_marginTop="30dp"
                    android:text="موافق"
                    android:layout_marginStart="100dp"
                    android:fontFamily="@font/cairo"
                    android:textSize="25sp"
                    android:textColor="@color/color2"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:textStyle="bold"
                    />


            </LinearLayout>



        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>