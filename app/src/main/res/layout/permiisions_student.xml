<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_height="match_parent">




        <android.support.v7.widget.SearchView
            android:id="@+id/searching"
            android:layout_margin="10sp"
            android:elevation="16dp"
            android:background="#fff"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <android.support.v7.widget.RecyclerView
            android:id="@+id/permission"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />




    </LinearLayout>









    <ImageView
        android:id="@+id/backgroundgroundempty"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_noexams"
        android:layout_gravity="center_horizontal|center_vertical"
        android:visibility="gone"
        android:scaleType="fitXY"

        />



    <com.google.android.gms.ads.doubleclick.PublisherAdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/publisherAdView"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.doubleclick.PublisherAdView>

    <TextView
        android:id="@+id/markedd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_above="@+id/publisherAdView"
        android:background="@drawable/text_nuber_list"
        android:elevation="16dp"
        android:gravity="center"
        android:layout_marginBottom="7dp"

        android:scaleType="fitCenter"
        android:text="@string/numberExams"

        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp" />

</RelativeLayout>